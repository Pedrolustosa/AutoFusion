@model IEnumerable<AutoFusion.Domain.Entities.Dealership>

@{
    ViewData["Title"] = "Concessionárias";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-primary bg-gradient text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Concessionárias</h5>
                    <a asp-action="Create" class="btn btn-light">
                        <i class="bi bi-plus-circle me-1"></i>Nova Concessionária
                    </a>
                </div>
                <div class="card-body">

                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>Nome</th>
                                    <th>Endereço</th>
                                    <th>Telefone</th>
                                    <th>E-mail</th>
                                    <th>Capacidade</th>
                                    <th class="text-end">Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var dealership in Model)
                                {
                                    <tr>
                                        <td>@dealership.Name</td>
                                        <td>@dealership.Address, @dealership.City - @dealership.State, @dealership.PostalCode</td>
                                        <td>@dealership.Phone</td>
                                        <td>@dealership.Email</td>
                                        <td>@dealership.MaxVehicleCapacity veículos</td>
                                        <td class="text-end">
                                            <a asp-action="Edit" asp-route-id="@dealership.DealershipId" class="btn btn-primary btn-sm">
                                                <i class="bi bi-pencil-square"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@dealership.DealershipId" class="btn btn-danger btn-sm">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
