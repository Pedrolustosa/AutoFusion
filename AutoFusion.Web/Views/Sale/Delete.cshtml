@model AutoFusion.Domain.Entities.Sale

@{
    ViewData["Title"] = "Excluir Venda";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-8">
            <div class="card">
                <div class="card-header bg-danger bg-gradient text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-trash me-2"></i>Excluir Venda
                    </h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        <strong>Atenção!</strong> Tem certeza que deseja excluir esta venda?
                    </div>

                    <dl class="row">
                        <dt class="col-sm-3">Protocolo</dt>
                        <dd class="col-sm-9">@Model.SaleProtocol</dd>

                        <dt class="col-sm-3">Data da Venda</dt>
                        <dd class="col-sm-9">@Model.SaleDate.ToString("dd/MM/yyyy")</dd>

                        <dt class="col-sm-3">Valor</dt>
                        <dd class="col-sm-9">@Model.SalePrice.ToString("C")</dd>

                        <dt class="col-sm-3">Cliente</dt>
                        <dd class="col-sm-9">@Model.Customer?.Name</dd>

                        <dt class="col-sm-3">Veículo</dt>
                        <dd class="col-sm-9">@Model.Vehicle?.Model (@Model.Vehicle?.ManufacturingYear)</dd>

                        <dt class="col-sm-3">Concessionária</dt>
                        <dd class="col-sm-9">@Model.Dealership?.Name</dd>
                    </dl>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="SaleId" />
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-2"></i>Voltar
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash me-2"></i>Confirmar Exclusão
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
