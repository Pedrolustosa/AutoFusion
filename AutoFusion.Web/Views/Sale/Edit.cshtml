@model AutoFusion.Domain.Entities.Sale

@{
    ViewData["Title"] = "Editar Venda";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary bg-gradient text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-pencil-square me-2"></i>Editar Venda
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post" class="needs-validation" novalidate>
                        <input type="hidden" asp-for="SaleId" />
                        <input type="hidden" asp-for="SaleProtocol" />
                        <input type="hidden" asp-for="Customer.CustomerId" />

                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <label for="VehicleId" class="form-label">Veículo</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="bi bi-car-front"></i>
                                    </span>
                                    <select asp-for="VehicleId" class="form-select"
                                            asp-items="@(ViewBag.Vehicles != null ? new SelectList(ViewBag.Vehicles, "VehicleId", "Model") : new SelectList(new List<SelectListItem>()))">
                                        <option value="">Selecione um veículo</option>
                                    </select>
                                </div>
                                <span asp-validation-for="VehicleId" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-4">
                                <label for="DealershipId" class="form-label">Concessionária</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="bi bi-building"></i>
                                    </span>
                                    <select asp-for="DealershipId" class="form-select"
                                            asp-items="@(ViewBag.Dealerships != null ? new SelectList(ViewBag.Dealerships, "DealershipId", "Name") : new SelectList(new List<SelectListItem>()))">
                                        <option value="">Selecione uma concessionária</option>
                                    </select>
                                </div>
                                <span asp-validation-for="DealershipId" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12 mb-4">
                                <label for="Customer.Name" class="form-label">Nome do Cliente</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="bi bi-person"></i>
                                    </span>
                                    <input asp-for="Customer.Name" class="form-control" placeholder="Digite o nome do cliente" required />
                                </div>
                                <span asp-validation-for="Customer.Name" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <label for="Customer.CPF" class="form-label">CPF</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="bi bi-person-vcard"></i>
                                    </span>
                                    <input asp-for="Customer.CPF" class="form-control" placeholder="000.000.000-00" required />
                                </div>
                                <span asp-validation-for="Customer.CPF" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-4">
                                <label for="Customer.Phone" class="form-label">Telefone</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="bi bi-telephone"></i>
                                    </span>
                                    <input asp-for="Customer.Phone" class="form-control" placeholder="(00) 00000-0000" required />
                                </div>
                                <span asp-validation-for="Customer.Phone" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <label for="SaleDate" class="form-label">Data da Venda</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="bi bi-calendar"></i>
                                    </span>
                                    <input asp-for="SaleDate" type="date" class="form-control" required />
                                </div>
                                <span asp-validation-for="SaleDate" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-4">
                                <label for="SalePrice" class="form-label">Preço da Venda</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="bi bi-currency-dollar"></i>
                                    </span>
                                    <input asp-for="SalePrice" type="number" step="0.01" class="form-control" placeholder="0.00" required />
                                </div>
                                <span asp-validation-for="SalePrice" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left me-1"></i>Voltar
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle me-1"></i>Salvar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
