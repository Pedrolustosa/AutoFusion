@model AutoFusion.Application.DTOs.RegisterRequestDto
@{
    ViewData["Title"] = "Criar Conta";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-12 col-md-6 col-lg-5 col-xl-4">
            <div class="card shadow-sm">
                <div class="card-header bg-primary bg-gradient text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-person-plus me-2"></i>Criar Conta
                    </h5>
                </div>
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <i class="bi bi-person-circle display-1 text-primary mb-3"></i>
                        <h4>Junte-se ao AutoFusion</h4>
                        <p class="text-muted">Crie sua conta para começar</p>
                    </div>

                    <form asp-action="Register" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>
                            <span>Corrija os erros abaixo:</span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Username" class="form-label">Usuário</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-person"></i>
                                </span>
                                <input asp-for="Username" class="form-control" placeholder="Digite seu usuário" />
                            </div>
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Email</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-envelope"></i>
                                </span>
                                <input asp-for="Email" class="form-control" placeholder="seu@email.com" />
                            </div>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">Senha</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-key"></i>
                                </span>
                                <input asp-for="Password" type="password" class="form-control" placeholder="Digite sua senha" />
                            </div>
                            <span asp-validation-for="Password" class="text-danger"></span>
                            <small class="form-text text-muted">
                                A senha deve ter pelo menos 8 caracteres, incluindo letras maiúsculas, minúsculas e números.
                            </small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="AccessLevel" class="form-label">Nível de Acesso</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-shield"></i>
                                </span>
                                <select asp-for="AccessLevel" class="form-select">
                                    <option value="Salesperson">Vendedor</option>
                                    <option value="Manager">Gerente</option>
                                    <option value="Administrator">Administrador</option>
                                </select>
                            </div>
                            <span asp-validation-for="AccessLevel" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-person-plus me-2"></i>Criar Conta
                            </button>
                        </div>
                    </form>

                    <hr class="my-4">

                    <div class="text-center">
                        <p class="mb-2">Já tem uma conta?</p>
                        <a asp-action="Login" class="btn btn-outline-primary">
                            <i class="bi bi-box-arrow-in-right me-2"></i>Fazer Login
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
