@model IEnumerable<AutoFusion.Domain.Entities.Manufacturer>

@{
    ViewData["Title"] = "Manufacturers";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-primary bg-gradient text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Manufacturers</h5>
                    <a asp-action="Create" class="btn btn-light">
                        <i class="bi bi-plus-circle me-1"></i>Add New Manufacturer
                    </a>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>Name</th>
                                    <th>Country</th>
                                    <th>Foundation Year</th>
                                    <th>Website</th>
                                    <th class="text-end">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var manufacturer in Model)
                                {
                                    <tr>
                                        <td>@manufacturer.Name</td>
                                        <td>
                                            <span class="d-inline-flex align-items-center">
                                                <i class="bi bi-globe me-2"></i>@manufacturer.CountryOfOrigin
                                            </span>
                                        </td>
                                        <td>@manufacturer.FoundationYear</td>
                                        <td>
                                            <a href="@manufacturer.Website" target="_blank" class="text-decoration-none">
                                                <i class="bi bi-link-45deg me-1"></i>@manufacturer.Website
                                            </a>
                                        </td>
                                        <td class="text-end">
                                            <div class="btn-group" role="group">
                                                <a asp-action="Edit" asp-route-id="@manufacturer.ManufacturerId" 
                                                   class="btn btn-outline-warning btn-sm" title="Edit">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@manufacturer.ManufacturerId" 
                                                   class="btn btn-outline-danger btn-sm" title="Delete">
                                                    <i class="bi bi-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
}
