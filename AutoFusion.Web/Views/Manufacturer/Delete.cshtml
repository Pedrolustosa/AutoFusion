@model AutoFusion.Domain.Entities.Manufacturer

@{
    ViewData["Title"] = "Delete Manufacturer";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger bg-gradient text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="bi bi-exclamation-triangle me-2"></i>Delete Manufacturer
                    </h5>
                    <a asp-action="Index" class="btn btn-outline-light btn-sm">
                        <i class="bi bi-arrow-left me-2"></i>Back to List
                    </a>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger d-flex align-items-center" role="alert">
                        <i class="bi bi-exclamation-triangle-fill fs-4 me-2"></i>
                        <div>
                            <strong>Warning!</strong> This action cannot be undone. Are you sure you want to delete this manufacturer?
                        </div>
                    </div>

                    <div class="list-group list-group-flush mb-4">
                        <div class="list-group-item">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-building me-3 text-danger fs-4"></i>
                                <div>
                                    <small class="text-muted d-block">Name</small>
                                    <strong>@Model.Name</strong>
                                </div>
                            </div>
                        </div>
                        <div class="list-group-item">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-globe me-3 text-danger fs-4"></i>
                                <div>
                                    <small class="text-muted d-block">Country of Origin</small>
                                    <strong>@Model.CountryOfOrigin</strong>
                                </div>
                            </div>
                        </div>
                        <div class="list-group-item">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-calendar-event me-3 text-danger fs-4"></i>
                                <div>
                                    <small class="text-muted d-block">Foundation Year</small>
                                    <strong>@Model.FoundationYear</strong>
                                </div>
                            </div>
                        </div>
                        <div class="list-group-item">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-link-45deg me-3 text-danger fs-4"></i>
                                <div>
                                    <small class="text-muted d-block">Website</small>
                                    <a href="@Model.Website" target="_blank" class="text-decoration-none">
                                        @Model.Website
                                        <i class="bi bi-box-arrow-up-right ms-1 small"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <form asp-action="DeleteConfirmed" asp-route-id="@Model.ManufacturerId" method="post">
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash me-2"></i>Delete Permanently
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle me-2"></i>Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
}
