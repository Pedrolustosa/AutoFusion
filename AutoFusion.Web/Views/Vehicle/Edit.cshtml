@using AutoFusion.Domain.Entities
@using Microsoft.AspNetCore.Mvc.Rendering
@model AutoFusion.Domain.Entities.Vehicle

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-8">
            <div class="card">
                <div class="card-header bg-primary bg-gradient text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-pencil me-2"></i>Editar Veículo
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="VehicleId" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>
                            <span>Corrija os erros abaixo:</span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Model" class="form-label">Modelo</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-car-front"></i>
                                </span>
                                <input asp-for="Model" class="form-control" />
                            </div>
                            <span asp-validation-for="Model" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ManufacturingYear" class="form-label">Ano de Fabricação</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-calendar"></i>
                                </span>
                                <input asp-for="ManufacturingYear" class="form-control" type="number" />
                            </div>
                            <span asp-validation-for="ManufacturingYear" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Price" class="form-label">Preço</label>
                            <div class="input-group">
                                <span class="input-group-text">R$</span>
                                <input asp-for="Price" class="form-control" type="number" step="0.01" />
                            </div>
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ManufacturerId" class="form-label">Fabricante</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-building"></i>
                                </span>
                                <select asp-for="ManufacturerId" class="form-select" asp-items="@(new SelectList(ViewBag.Manufacturers, "ManufacturerId", "Name"))">
                                    <option value="">Selecione um fabricante</option>
                                </select>
                            </div>
                            <span asp-validation-for="ManufacturerId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="VehicleType" class="form-label">Tipo do Veículo</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-truck"></i>
                                </span>
                                <select asp-for="VehicleType" class="form-select" asp-items="Html.GetEnumSelectList<VehicleType>()">
                                    <option value="">Selecione um tipo</option>
                                </select>
                            </div>
                            <span asp-validation-for="VehicleType" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Descrição</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="bi bi-file-text"></i>
                                </span>
                                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                            </div>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-2"></i>Voltar
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save me-2"></i>Salvar Alterações
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
